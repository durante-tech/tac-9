# TAC-9: Agentic SDLC Orchestrator - Environment Configuration

# ============================================================================
# AI PROVIDERS (at least one required)
# ============================================================================

# OpenAI API Key (for GPT-4o, GPT-4o-mini)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude Sonnet 4.5, Haiku)
ANTHROPIC_API_KEY=sk-ant-...

# Preferred model for agents (options: claude-sonnet-4.5, gpt-4o, claude-haiku, gpt-4o-mini)
DEFAULT_AGENT_MODEL=claude-sonnet-4.5

# Temperature for code generation (0.0-1.0, lower = more deterministic)
DEFAULT_AGENT_TEMPERATURE=0.1

# ============================================================================
# TARGET PROJECT (Next.js + Supabase SaaS Kit)
# ============================================================================

# Absolute path to your Next.js + Supabase application
TARGET_PROJECT_PATH=/Users/yourname/Developer/next-supabase-saas-kit-turbo

# Project type (nextjs-supabase, nextjs-only, custom)
TARGET_PROJECT_TYPE=nextjs-supabase

# ============================================================================
# SUPABASE CONFIGURATION (for database operations)
# ============================================================================

# Supabase URL (local or cloud)
SUPABASE_URL=http://localhost:54321
# SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================================================
# GITHUB INTEGRATION (optional - for PR automation)
# ============================================================================

# GitHub Personal Access Token (for creating PRs, issues)
GITHUB_TOKEN=ghp_...

# GitHub Repository (owner/repo format)
GITHUB_REPO=your-org/your-repo

# Default PR base branch
GITHUB_DEFAULT_BRANCH=main

# Auto-create PRs after feature completion
AUTO_CREATE_PR=false

# ============================================================================
# ORCHESTRATOR SETTINGS
# ============================================================================

# Maximum parallel agents (1-10, higher = faster but more API usage)
MAX_PARALLEL_AGENTS=3

# Agent timeout in seconds (300-3600)
AGENT_TIMEOUT_SECONDS=600

# Enable debug logging
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Workspace directory (where feature workspaces are created)
WORKSPACE_DIR=./workspace

# Cache directory (for agent outputs, templates)
CACHE_DIR=./.cache

# ============================================================================
# AUTOMATION SETTINGS
# ============================================================================

# Auto-commit generated code to git
ENABLE_AUTO_COMMIT=false

# Auto-create GitHub PR after completion
ENABLE_AUTO_PR=false

# Auto-run tests before completion
ENABLE_AUTO_TEST=true

# Auto-run security scan before completion
ENABLE_AUTO_SECURITY_SCAN=true

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================

# Enable/disable specific phases
ENABLE_PRODUCT_PHASE=true
ENABLE_ARCHITECTURE_PHASE=true
ENABLE_IMPLEMENTATION_PHASE=true
ENABLE_TESTING_PHASE=true
ENABLE_REVIEW_PHASE=true
ENABLE_DEPLOYMENT_PHASE=true

# Enable/disable specific agents
ENABLE_PRODUCT_MANAGER=true
ENABLE_SOLUTIONS_ARCHITECT=true
ENABLE_DATABASE_ARCHITECT=true
ENABLE_DATABASE_ENGINEER=true
ENABLE_BACKEND_ENGINEER=true
ENABLE_FRONTEND_ENGINEER=true
ENABLE_E2E_TEST_ENGINEER=true
ENABLE_DB_TEST_ENGINEER=true
ENABLE_SECURITY_ENGINEER=true
ENABLE_CODE_REVIEWER=true
ENABLE_PERFORMANCE_ENGINEER=true
ENABLE_TECHNICAL_WRITER=true
ENABLE_DEVOPS_ENGINEER=true

# ============================================================================
# QUALITY GATES
# ============================================================================

# Minimum test coverage required (0-100)
MIN_TEST_COVERAGE=80

# Maximum bundle size increase (KB)
MAX_BUNDLE_SIZE_INCREASE=100

# Fail on security vulnerabilities (true/false)
FAIL_ON_SECURITY_VULNERABILITIES=true

# Fail on TypeScript errors (true/false)
FAIL_ON_TYPESCRIPT_ERRORS=true

# Fail on failed tests (true/false)
FAIL_ON_FAILED_TESTS=true

# ============================================================================
# NOTIFICATIONS (optional)
# ============================================================================

# Slack webhook URL (for notifications)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Discord webhook URL (for notifications)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Email notifications (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=team@yourcompany.com

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Retry failed agent tasks (0-5)
AGENT_MAX_RETRIES=2

# Template directory (custom templates)
TEMPLATE_DIR=./templates

# Use streaming responses from AI (true/false)
ENABLE_STREAMING=true

# Save agent conversations for debugging
SAVE_AGENT_CONVERSATIONS=true

# Conversation save directory
CONVERSATION_DIR=./logs/conversations
