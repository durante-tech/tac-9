'use client';

import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { Button } from '@kit/ui/button';
import {
  Form,
  FormControl,
  FormField,
  FormItem,
  FormLabel,
  FormMessage,
} from '@kit/ui/form';
import { Input } from '@kit/ui/input';
import { {{ schema_name }}, type {{ type_name }} } from '../_lib/schemas/{{ feature_name }}.schema';
import { create{{ resource_name }} } from '../_lib/server/server-actions';

interface {{ form_component_name }}Props {
  onSuccess?: () => void;
}

export function {{ form_component_name }}({ onSuccess }: {{ form_component_name }}Props) {
  const form = useForm<{{ type_name }}>({
    resolver: zodResolver({{ schema_name }}),
    defaultValues: {
      {% for field in fields %}
      {{ field.name }}: '{{ field.default }}',
      {% endfor %}
    },
  });

  const onSubmit = async (data: {{ type_name }}) => {
    try {
      await create{{ resource_name }}(data);
      form.reset();
      onSuccess?.();
    } catch (error) {
      console.error('Failed to create {{ resource_name }}:', error);
    }
  };

  return (
    <Form {...form}>
      <form onSubmit={form.handleSubmit(onSubmit)} className="space-y-4">
        {% for field in fields %}
        <FormField
          control={form.control}
          name="{{ field.name }}"
          render={({ field }) => (
            <FormItem>
              <FormLabel>{{ field.label }}</FormLabel>
              <FormControl>
                <Input placeholder="{{ field.placeholder }}" {...field} />
              </FormControl>
              <FormMessage />
            </FormItem>
          )}
        />
        {% endfor %}

        <Button type="submit" disabled={form.formState.isSubmitting}>
          {form.formState.isSubmitting ? 'Creating...' : 'Create {{ resource_name }}'}
        </Button>
      </form>
    </Form>
  );
}
